{
  "name": "video-ml",
  "scopeName": "source.video-ml",
  "fileTypes": [
    ".vml"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.video-ml",
      "match": "\\b(add|as|at|by|delayed|end|extract|from|in|layer|load|of|project|start|timeline|to|video)\\b"
    },
    {
      "name": "string.quoted.double.video-ml",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.video-ml",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.video-ml",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.video-ml"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.video-ml"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.video-ml"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.video-ml"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.video-ml",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}

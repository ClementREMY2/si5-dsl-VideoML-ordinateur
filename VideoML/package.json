{
    "name": "video-ml",
    "displayName": "VideoML",
    "description": "Please enter a brief description here",
    "type": "module",
    "publisher": "si5-dsl-ordinateur",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "video-ml",
                "aliases": [
                    "VideoML",
                    "video-ml"
                ],
                "extensions": [
                    ".vml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "video-ml",
                "scopeName": "source.video-ml",
                "path": "./syntaxes/video-ml.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:video-ml"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "video-ml-cli": "./bin/cli"
    },
    "main": "./out/extension.cjs",
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "build:ui": "npm run build && npm run build:worker && node scripts/copy-monaco-assets.mjs && node scripts/copy-libs-to-ui.mjs",
        "build:worker": "node scripts/build-worker.mjs",
        "ui:grammar": "node scripts/generate-monarch-grammar.mjs",
        "langium:generate": "langium generate && npm run ui:grammar",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "langium": "~3.0.0",
        "shx": "^0.3.4",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^5.28.0",
        "@typescript-eslint/parser": "^5.28.0",
        "esbuild": "^0.20.2",
        "eslint": "^8.17.0",
        "langium-cli": "~3.0.1",
        "typescript": "^4.9.4"
    }
}
